#pragma kernel CSMain

struct PointMesh {
    float3 position;
};

RWStructuredBuffer<PointMesh> pointMeshesBuffer;

float time;

[numthreads(8,8,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    float3 pos = pointMeshesBuffer[id.x].position;

    pos.x += sin(time * 10);

    pointMeshesBuffer[id.x].position = pos;
}